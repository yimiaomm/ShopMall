<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="5dip"
    android:background="@drawable/comment_product_bg"
    android:orientation="vertical"
    android:padding="2dip">


    <android.support.v7.widget.CardView
        android:id="@+id/categorize_detail_product_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/categorize_detail_product_img"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

            <TextView
                android:id="@+id/categorize_detail_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/font_light"
                android:textSize="@dimen/dimen_16" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:orientation="horizontal">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/categorize_detail_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dip"
                        android:singleLine="true"
                        android:text="￥3900"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dimen_15" />
                    <TextView
                        android:id="@+id/tv_oldprice"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/dimen_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="￥123.0"/>
                </LinearLayout>
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/categorize_phone_type"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/add_shop_car"
                        android:layout_marginBottom="5dip"
                        android:layout_marginRight="5dp"/>
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>